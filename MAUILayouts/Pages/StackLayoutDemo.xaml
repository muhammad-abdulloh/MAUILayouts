<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUILayouts.Pages.StackLayoutDemo"
             Title="Stack Layout Demo"
             BackgroundColor="White"
             >
    <ScrollView Orientation="Vertical">

        <StackLayout Padding="20" Spacing="10" Orientation="Vertical" 
                 VerticalOptions="End"
                 >
            <Label Text=".NET MAUI Layouts"
               TextColor="Red"
               FontSize="25"
               FontAttributes="Bold"
               Margin="30"
               HorizontalOptions="Center"
               />

            <Button x:Name="verticalStackLayoutButton" Clicked="verticalStackLayoutButton_Clicked" Text="Vertical stack layout"></Button>
            <Button x:Name="horizontalStackLayoutButton" Clicked="horizontalStackLayoutButton_Clicked" Text="Horizontal Stack Layout "></Button>
            <Button x:Name="gridDemoButton" Clicked="gridDemoButton_Clicked" Text="Grid Demo Stack Layout "></Button>
            <Button x:Name="AbsolutlyLayoutButton" Clicked="AbsolutlyLayoutButton_Clicked" Text="Absolutly Stack Layout "></Button>
        </StackLayout>



    </ScrollView>

</ContentPage>